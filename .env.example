# ====================================
# ITMX Kaggle Pipeline Configuration
# ====================================
# Copy this file to .env and update values as needed

# ---- Database Configuration ----
DUCKDB_PATH=data/itmx_kaggle.duckdb
DUCKDB_DATABASE=itmx_kaggle

# ---- Data Paths ----
DATA_RAW_PATH=data/raw
DATA_PROCESSED_PATH=data/processed
KAGGLE_DATA_PATH=data/raw/kaggle

# ---- Prefect Configuration ----
PREFECT_API_URL=http://localhost:4200/api
PREFECT_SERVER_HOST=0.0.0.0
PREFECT_SERVER_PORT=4200

# ---- Spark Configuration ----
# Master URL (use spark://spark-master:7077 for Docker)
SPARK_MASTER=spark://spark-master:7077
# Force local mode (no cluster) - set to true to run locally
SPARK_LOCAL=false
SPARK_APP_NAME=ITMX_Kaggle_Pipeline

# Executor Configuration
SPARK_EXECUTOR_MEMORY=2g
SPARK_EXECUTOR_CORES=2

# Worker Configuration (for cluster mode)
SPARK_WORKER_CORES=2
SPARK_WORKER_MEMORY=2g

# ---- DBT Configuration ----
DBT_PROFILES_DIR=dbt
DBT_PROJECT_DIR=dbt
DBT_TARGET=dev
DBT_THREADS=4

# ---- Docker Configuration ----
DOCKER_NETWORK=pipeline-network
DOCKER_DATA_VOLUME=./data:/data

# ---- Logging Configuration ----
LOG_LEVEL=INFO
LOG_PATH=logs

# ---- Environment Mode ----
# Options: development, staging, production
ENVIRONMENT=development